<p id="notice"><%= notice %></p>

<h1>Book Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Page count</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_sites.each do |book_site| %>
      <tr>
        <td><%= book_site.title %></td>
        <td><%= book_site.page_count %></td>
        <td><%= book_site.rating %></td>
        
        <td><%= link_to 'Show', book_site %></td>
        <td><%= link_to 'Edit', edit_book_site_path(book_site) %></td>
        <td><%= link_to 'Destroy', book_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Review', new_book_site_path %>
